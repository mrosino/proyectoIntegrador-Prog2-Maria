<% if (locals.logged == true) { %>
<%- include('./partials/headerLogueado') %>
<% } else { %>

<%- include('./partials/header') %>
<% }	%>



<body>


	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/lucia goinzales.jpg" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6 costado">
				<div class="d-flex align-items-center ">
					<ul>

					<li><h1 class="saludo main-title "> <%= visitor.name %> </h1></li>
						<% if (locals.logged==true && visitor.id == user.id) { %>
						<a href="/ramo/emailEdit">
							<i class="fas fa-cog"></i>
						</a>
						<a href="/ramo/pssEdit">
							<i class="fas fa-cog"></i>
						</a>
						<% } %> 
						<!-- Aca iria el boton de seguir pero lo sacamos porque no tiene sentido y queda feo. Si lo descomentan está funcional. -->
						<input type="hidden" name="id" value="<%= locals.user.id %> ">
					</ul>
				
						<% if (locals.logged==true && visitor.id != user.id) { %>
						<a href="#" class="btn mt-3">Seguir</a> <!--falta agregar a donde va este boton-->
						<% } %> 
					

				</div>
				<div>
					<ul>
						 </li><%= products.length %> Productos</li> 
						<!-- <li>1600 seguidores </li>--> <!--cuando este la tabla hay que descomentar-->
						<li><%= comments.length %> Comentarios</li>
						<% if (locals.logged==true && visitor.id == user.id) { %>
						<li><a href="/ramo/productAdd" class="btn mt-3">Añadir producto</a></li>
<% } %> 
					</ul>

				</div>

			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12 ">
				<h2 class="products-title typography-title" style="text-align: center;">Productos Activos</h2>

			</div>

			<div class="container products-wrapper">
				<div class="col-12">
					<h2 class="products-title typography-title"> Todos los productos </h2>
				</div>
				<div class="row">
					<% for (let i = 0; i < products.length; i++) { %>

					<!-- Show the "ultimos" products -->
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">

							<a href="/ramo/products/<%= products[i].id %>">
								<figure class="product-box_image">
									<img src="/images/products/<%= products[i].image %>"
										alt="<%= products[i].product_name %>">
								</figure>
								<article class="product-box_data">

									<h2><%= products[i].product_name %></h2>
									<p><% products[i].description %></p>
									<p></p> <!-- configurar controller de comentarios.lenght -->
								</article>
							</a>
						</section>
					</div>


					<% } %>
				</div>
			</div>
		</div>

	</div>


	<%- include('./partials/footer') %>

</body>

</html>