                    </div>
                    <div class="form-group">
                        <label for="password">
                            Por seguridad escriba su contraseña
                        </label>
                        <input required type="password" name="password" placeholder="Contraseña">
                    </div>

                    <%- include('./partials/flashKeys') %>
                    <div class="form-group boton">
                        <button type="submit">Cambiar foto de perfil</button>
                    </div>
                </form>

            </div>
        </div>
    </div> 
