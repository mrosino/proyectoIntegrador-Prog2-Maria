<% if (locals.logged == true) { %> 
	<%- include('../partials/headerLogueado') %>
<% } else { %> 

	<%- include('../partials/header') %>
<% }	%> 


<body class="bodyLogin">

	<div class="form">

		<div class="form-panel one">
			<div class="form-header">
				<h1>Ingresar</h1>
				<h2>Ingresá tu e-mail y contraseña para acceder al sitio</h2>
			</div>
			<div class="form-content">
				<% if(error == "failedRegistered"){%>
					<h2 style="text-align:center; color:red;">El email ingresado ya está registrado. Inicie sesion</h2>
				<%} %> 
				<%if(error == "wrongUser"){%>
					<h2 style="text-align:center; color:red;">Para cambiar los datos de este usuario debes ingresar a su cuenta.</h2>
				<%}%>
				<%if(error == "changeSession"){%>
					<h2 style="text-align:center; color:red;">Solo puedes modificar los productos que creaste</h2>
				<%}%>
				<% if (error == "noPss"){ %> 
					<h2 style="text-align:center; color:red;">La contraseña es incorrecta. Ingrese nuevamente</h2>
					<% } %>
				
				<form method="POST">
					<div class="form-group">
						<label for="username">Correo Electronico </label>
						<input type="email" id="username" name="email" placeholder="email" required="required" />
					</div>
					<div class="form-group">
						<label for="password">Contraseña</label>
						<input type="password" id="password" name="password" placeholder="contraseña"
							required="required" />
					</div>
					<div class='form-group'>
						<label class="form-remember">
							<input type="checkbox" name="remember"/>Recordar
					 </label>	<!--<a class="form-recovery" href="#">¿Olvidaste tu contraseña?</a> -->
					</div>
					<div class="form-group">
						<button type="submit">Iniciar sesión</button>
					</div>
				</form>
			</div>
		</div>

	</div>

	<br><br><br><br><br><br><br><br><br>



	<%- include('../partials/footer') %>
</body>

</html>