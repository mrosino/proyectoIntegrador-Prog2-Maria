<% if (locals.logged == true) { %>
<%- include('./partials/headerLogueado') %>
<% } else { %>

<%- include('./partials/header') %>
<% }	%>


<body>


	

	<div class="banner">
		<img src="/images/diseno banner 2.jpg" alt="">
	</div>

	<div class="container products-wrapper">
		<div class="col-12">
			<h2 class="products-title typography-title"> Novedades</h2>
		</div>
		<div class="row">
			<% for (let i = 0; i < products.length; i++) { %>

			<!-- Show the "ultimos" products -->
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<% if (locals.logged==true ) { %>
					<div class="publishedBy">
						<a href="/ramo/profile/<%= products[i].created_by %>">
							<h4>Publicado por <%= products[i]["products_users.name"] %>
							</h4>
						</a>

					</div>
					<% } %>
					<a href="/ramo/products/<%= products[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= products[i].image %>" alt="<%= products[i].product_name %>"
								class="imagen">
						</figure>
						<article class="product-box_data">

							<h2><%= products[i].product_name %></h2>
							<h4></h4>

						</article>
					</a>
				</section>
			</div>
			<% } %>
	
		</div>

		<%- include('./partials/footer') %>
		
</body>

</html>